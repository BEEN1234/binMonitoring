extends layout
include mixins/_login
include mixins/_register
block content
    .introSpacer
    .introContainer
        .flashes#flashes
        .intro 
            .loginAndSampleContainer
                +login()
                .sample.card
                    h3.introH3 View Sample
                    hr
                    button.submitButton Go
            .registerContainer           
                +register()
    .readoutSpacer
    .readoutBanner.banner
            .bannerLinks
                .bannerLinksText#setupCables Setup your cables:
                    table#setupCablesDropdown
                        tr
                            th Cable ID
                            th Select an existing bin
                            th Name a new bin
                            th Name the cable
                            th
    .readout
        .flashes#readoutFlashes
        #bins
    script(type="text/javascript" src="/javascripts/genBins.js")